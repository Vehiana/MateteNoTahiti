<div class="dashboard">
    <div class="dashboard-header">
        <h1>Administration</h1>
        <div class="user-info">
            <span>Connecté en tant qu'administrateur</span>
        </div>
    </div>

    <div class="dashboard-content">
        <div class="dashboard-nav">
            <a href="/" class="nav-item">
                <i class="fas fa-home"></i>
                Accueil
            </a>
            <a href="/admin/users" class="nav-item">
                <i class="fas fa-users"></i>
                Utilisateurs
            </a>
            <a href="/admin/products" class="nav-item">
                <i class="fas fa-box"></i>
                Produits
            </a>
            <a href="/admin/sellers" class="nav-item">
                <i class="fas fa-store"></i>
                Vendeurs
            </a>
            <a href="/admin/settings" class="nav-item">
                <i class="fas fa-cog"></i>
                Paramètres
            </a>
        </div>

        <div class="dashboard-main">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Utilisateurs</h3>
                        <p class="stat-number">{{usersCount}}</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-store"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Vendeurs</h3>
                        <p class="stat-number">{{sellersCount}}</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Produits</h3>
                        <p class="stat-number">{{productsCount}}</p>
                    </div>
                </div>
            </div>

            <div class="admin-sections">
                <div class="section">
                    <h2>Derniers utilisateurs inscrits</h2>
                    {{#if recentUsers.length}}
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Email</th>
                                    <th>Rôle</th>
                                    <th>Date d'inscription</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recentUsers}}
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>{{this.email}}</td>
                                    <td>{{this.role}}</td>
                                    <td>{{formatDate this.createdAt}}</td>
                                    <td>
                                        <a href="/admin/users/edit/{{this._id}}" class="btn-edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/admin/users/delete/{{this._id}}" class="btn-delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{else}}
                    <p>Aucun utilisateur inscrit récemment.</p>
                    {{/if}}
                </div>

                <div class="section">
                    <h2>Derniers produits ajoutés</h2>
                    {{#if recentProducts.length}}
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th>Vendeur</th>
                                    <th>Prix</th>
                                    <th>Date d'ajout</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recentProducts}}
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>{{this.seller.name}}</td>
                                    <td>{{this.price}} XPF</td>
                                    <td>{{formatDate this.createdAt}}</td>
                                    <td>
                                        <a href="/admin/products/edit/{{this._id}}" class="btn-edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/admin/products/delete/{{this._id}}" class="btn-delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{else}}
                    <p>Aucun produit ajouté récemment.</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
