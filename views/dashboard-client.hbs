<div class="dashboard">
    <div class="dashboard-header">
        <h1>Mon espace</h1>
        <div class="user-info">
            <span>Bienvenue, {{user.name}}</span>
        </div>
    </div>

    <div class="dashboard-content">
        <div class="dashboard-nav">
            <a href="/" class="nav-item">
                <i class="fas fa-home"></i>
                Accueil
            </a>
            <a href="/products" class="nav-item">
                <i class="fas fa-shopping-bag"></i>
                Catalogue
            </a>
            <a href="/favorites" class="nav-item">
                <i class="fas fa-heart"></i>
                Favoris
            </a>
            <a href="/profile" class="nav-item">
                <i class="fas fa-user"></i>
                Mon profil
            </a>
        </div>

        <div class="dashboard-main">
            <div class="featured-products">
                <h2>Produits recommandés</h2>
                {{#if featuredProducts.length}}
                <div class="products-grid">
                    {{#each featuredProducts}}
                    <div class="product-card">
                        <div class="product-image">
                            <img src="{{this.image}}" alt="{{this.name}}">
                            <button class="btn-favorite" data-id="{{this._id}}">
                                <i class="fas fa-heart"></i>
                            </button>
                        </div>
                        <div class="product-info">
                            <h3>{{this.name}}</h3>
                            <p class="product-seller">par {{this.seller.name}}</p>
                            <p class="product-price">{{this.price}} XPF</p>
                            <a href="/products/{{this._id}}" class="btn-view">
                                Voir le produit
                            </a>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="no-products">
                    <p>Aucun produit recommandé pour le moment.</p>
                    <a href="/products" class="btn-primary">
                        <i class="fas fa-shopping-bag"></i> Parcourir le catalogue
                    </a>
                </div>
                {{/if}}
            </div>

            <div class="favorite-sellers">
                <h2>Vendeurs populaires</h2>
                {{#if popularSellers.length}}
                <div class="sellers-grid">
                    {{#each popularSellers}}
                    <div class="seller-card">
                        <div class="seller-info">
                            <h3>{{this.name}}</h3>
                            <p>{{this.productsCount}} produits</p>
                            <a href="/sellers/{{this._id}}" class="btn-view">
                                Voir la boutique
                            </a>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <p>Aucun vendeur à afficher pour le moment.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>
