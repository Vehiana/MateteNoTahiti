<h1>Votre Panier</h1>

{{#if cart.length}}
    <div class="cart-container">
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Prix</th>
                    <th>Sous-total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each cart}}
                    <tr>
                        <td>
                            <img src="{{img}}" alt="{{name}}" class="cart-product-img">
                            {{name}}
                        </td>
                        <td>{{quantity}}</td>
                        <td>{{prix}} F</td>
                        <td>{{subtotal}} F</td>
                        <td>
                            <form method="POST" action="/cart/remove/{{id}}">
                                <button type="submit" class="remove-btn">Retirer</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>

        <div class="cart-total">
            <h2>Total : {{total}} F</h2>
            <form method="POST" action="/checkout">
                <button type="submit" class="checkout-btn">Passer à la commande</button>
            </form>
        </div>
    </div>
{{else}}
    <p>Votre panier est vide. <a href="/products">Découvrez nos produits</a>.</p>
{{/if}}