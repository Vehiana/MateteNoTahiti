<div class="image-banner">
    <img src="/images/MateteNoTahiti.png" alt="Matete No tahiti">
</div>

<section class="section">
    <div class="container">
        <div class="search-box">
            <form method="POST" action="/" class="field has-addons has-addons-centered">
                <div class="control has-icons-left is-expanded">
                    <input class="input is-medium" type="text" id="search-name" placeholder="Rechercher un produit...">
                    <span class="icon is-left">
                        <i class="fas fa-search"></i>
                    </span>
                </div>
                <div class="control">
                    <button class="button is-primary is-medium" onclick="searchProducts()">
                        Rechercher
                    </button>
                </div>
            </form>
        </div>

        <div class="content has-text-centered mt-6 mb-6">
            <h2 class="title is-3">MAEVA! WELCOME! BIENVENUE!</h2>
            <p class="subtitle is-5">
                Sur cette plateforme vous pourrez consulter des produits
                vendus sur les bords de route de notre belle Ã®le, Tahiti.
            </p>
        </div>

        <div class="featured-section">
            <h2 class="title is-4 has-text-centered mb-5">
                <span class="icon-text">
                    <span class="icon">
                        <i class="fas fa-star"></i>
                    </span>
                    <span>Nos derniers produits</span>
                </span>
            </h2>

            <div class="products-grid">
                {{#each products}}
                <div class="product-card">
                    <div class="product-image">
                        <img src="/images/products/{{this.photo}}" alt="{{this.name_product}}">
                        {{#if this.isNew}}
                        <span class="tag is-success is-medium product-tag">
                            Nouveau
                        </span>
                        {{/if}}
                    </div>
                    <div class="product-info">
                        <h3 class="title is-5">{{this.name_product}}</h3>
                        <p class="description">{{this.description}}</p>
                        <div class="price-tag">
                            <span class="icon">
                                <i class="fas fa-tag"></i>
                            </span>
                            <span class="price">{{formatPrice this.price}}</span>
                        </div>
                    </div>
                    <div class="product-actions">
                        <a href="/product/{{this.id}}" class="button is-primary is-fullwidth">
                            <span class="icon">
                                <i class="fas fa-eye"></i>
                            </span>
                            <span>Voir le produit</span>
                        </a>
                    </div>
                </div>
                {{else}}
                <div class="notification is-warning is-light">
                    <p class="has-text-centered">Aucun produit disponible pour le moment.</p>
                </div>
                {{/each}}
            </div>

            {{#if products.length}}
            <div class="has-text-centered mt-6">
                <a href="/products" class="button is-primary is-outlined">
                    <span class="icon">
                        <i class="fas fa-th-list"></i>
                    </span>
                    <span>Voir tous les produits</span>
                </a>
            </div>
            {{/if}}
        </div>
    </div>
</section>