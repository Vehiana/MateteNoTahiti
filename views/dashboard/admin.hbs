<div class="dashboard admin-dashboard">
    <h1 class="dashboard-title">{{title}}</h1>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <h3>Utilisateurs</h3>
                <p class="stat-value">{{usersCount}}</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-store"></i>
            </div>
            <div class="stat-content">
                <h3>Vendeurs</h3>
                <p class="stat-value">{{sellersCount}}</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-box"></i>
            </div>
            <div class="stat-content">
                <h3>Produits</h3>
                <p class="stat-value">{{productsCount}}</p>
            </div>
        </div>
    </div>

    <div class="dashboard-sections">
        <div class="section">
            <h2>Derniers utilisateurs inscrits</h2>
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Rôle</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each recentUsers}}
                            <tr>
                                <td>{{name}}</td>
                                <td>{{email}}</td>
                                <td>{{role}}</td>
                                <td>
                                    <a href="/admin/users/{{_id}}" class="button is-small">
                                        <span class="icon">
                                            <i class="fas fa-edit"></i>
                                        </span>
                                    </a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <a href="/admin/users" class="button is-primary">Voir tous les utilisateurs</a>
        </div>

        <div class="section">
            <h2>Derniers produits ajoutés</h2>
            <div class="products-grid">
                {{#each recentProducts}}
                    <div class="product-card">
                        <div class="product-image">
                            {{#if image}}
                                <img src="{{image}}" alt="{{name}}">
                            {{else}}
                                <img src="/images/default-product.png" alt="Image par défaut">
                            {{/if}}
                        </div>
                        <div class="product-info">
                            <h3>{{name}}</h3>
                            <p>{{price}} XPF</p>
                        </div>
                        <div class="product-actions">
                            <a href="/admin/products/{{_id}}" class="button is-small">
                                <span class="icon">
                                    <i class="fas fa-edit"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                {{/each}}
            </div>
            <a href="/admin/products" class="button is-primary">Voir tous les produits</a>
        </div>
    </div>
</div>
